<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey_400"
    android:clickable="false"
    android:longClickable="false"
    android:orientation="vertical"
    android:padding="@dimen/material_default_padding"
    tools:context="com.applozic.mobicomkit.uiwidgets.conversation.adapter.DetailedConversationAdapter">

    <TextView
        android:id="@+id/applozic_call_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 min 5 sec"
        android:textColor="@color/material_white_1000"
        android:textSize="@dimen/material_typography_textsize_caption"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_default_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/applozic_call_image_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_white_24dp"/>

        <TextView
            android:id="@+id/applozic_call_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:layout_marginLeft="@dimen/material_default_padding"
            android:text="@string/missed"
            android:textColor="@color/material_white_1000"
            android:textSize="@dimen/material_typography_textsize_subheading"/>

    </LinearLayout>

    <TextView
        android:id="@+id/applozic_call_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/material_default_padding"
        android:text="11:40"
        android:textColor="@color/material_white_1000"
        android:textSize="@dimen/material_typography_textsize_caption"/>

</LinearLayout>
