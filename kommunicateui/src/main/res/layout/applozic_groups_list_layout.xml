<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/listViewActivatedStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_lists_height_row"
    android:padding="@dimen/material_default_padding"
    tools:context="com.applozic.mobicomkit.uiwidgets.people.channel.ChannelFragment">

    <RelativeLayout
        android:id="@+id/profile_image_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/alphabeticImage"
            android:layout_width="@dimen/material_lists_size_avatar"
            android:layout_height="@dimen/material_lists_size_avatar"
            android:layout_gravity="center"
            android:background="@drawable/mobiframework_circular_text_view"
            android:gravity="center"
            android:textColor="@color/material_white_1000"
            android:textSize="@dimen/material_typography_textsize_title"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactImage"
            android:layout_width="@dimen/material_lists_size_avatar"
            android:layout_height="@dimen/material_lists_size_avatar"
            android:background="@drawable/mobiframework_circular_text_view"
            android:src="@drawable/ic_people_grey_600_24dp"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/displayNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/material_default_padding"
        android:layout_toRightOf="@+id/profile_image_relative_layout">

        <TextView
            android:id="@+id/applozic_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/material_grey_900"
            android:textSize="@dimen/material_typography_textsize_subheading"/>

        <TextView
            android:id="@+id/applozic_group_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/applozic_group_name"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/material_grey_500"
            android:textSize="@dimen/material_typography_textsize_caption"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
