<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serviceDisconnectionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:context="com.applozic.mobicomkit.uiwidgets.conversation.activity.ConversationActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:padding="@dimen/material_default_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/emoji_ios_1f613"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/material_half_padding"
            android:text="@string/snap_text"
            android:textColor="@color/material_grey_800"
            android:textSize="@dimen/material_typography_textsize_display1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/material_half_padding"
            android:gravity="center"
            android:text="@string/account_disconnection_message"
            android:textColor="@color/material_grey_600"
            android:textSize="@dimen/material_typography_textsize_subheading"/>

    </LinearLayout>

</RelativeLayout>
