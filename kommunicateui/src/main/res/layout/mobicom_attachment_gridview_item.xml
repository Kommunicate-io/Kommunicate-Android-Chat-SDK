<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    tools:context="com.applozic.mobicomkit.uiwidgets.conversation.adapter.MobiComAttachmentGridViewAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.applozic.mobicomkit.uiwidgets.widget.DynamicSquareLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitesmoke">

            <ImageView
                android:id="@+id/galleryImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/mobicom_attachment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/material_default_padding"
                android:src="@drawable/ic_attachment_grey_600_24dp"
                android:tint="@color/material_grey_700"
                android:visibility="gone"/>

        </com.applozic.mobicomkit.uiwidgets.widget.DynamicSquareLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white_1000"
            android:minHeight="@dimen/material_touchable_minheight">

            <TextView
                android:id="@+id/mobicom_attachment_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_default_padding"
                android:gravity="center_vertical"
                android:minHeight="@dimen/material_touchable_minheight"
                android:textColor="@color/material_grey_700"
                android:textSize="@dimen/material_typography_textsize_caption"/>

            <TextView
                android:id="@+id/mobicom_attachment_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_default_padding"
                android:layout_toLeftOf="@+id/mobicom_attachment_delete_btn"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minHeight="@dimen/material_touchable_minheight"
                android:text="@string/file_name_will_come_here_for_attachment"
                android:textColor="@color/material_grey_700"
                android:textSize="@dimen/material_typography_textsize_caption"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/mobicom_attachment_delete_btn"
                android:layout_width="@dimen/material_touchable_minheight"
                android:layout_height="@dimen/material_touchable_minheight"
                android:layout_alignParentRight="true"
                android:background="@color/apploizc_transparent_color"
                android:src="@drawable/ic_delete_white_24dp"
                android:tint="@color/material_grey_700"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
