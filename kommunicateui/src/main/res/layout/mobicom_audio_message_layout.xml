<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/apploizc_transparent_color"
    android:orientation="vertical"
    tools:context="com.applozic.mobicomkit.uiwidgets.conversation.fragment.AudioMessageFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_white_1000"
        android:orientation="vertical"
        android:padding="@dimen/material_default_padding">

        <ImageButton
            android:id="@+id/audio_mic_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/apploizc_transparent_color"
            android:scaleType="centerCrop"
            android:src="@drawable/applozic_audio_normal"/>

        <TextView
            android:id="@+id/txtcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/material_default_padding"
            android:paddingLeft="@dimen/material_default_padding"
            android:paddingRight="@dimen/material_default_padding"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="@color/material_grey_800"
            android:textSize="@dimen/material_typography_textsize_display1"/>

        <TextView
            android:id="@+id/audio_recording_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/material_half_padding"
            android:text="@string/start_text"
            android:textColor="@color/material_grey_600"
            android:textSize="@dimen/material_typography_textsize_subheading"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/audio_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_weight="1"
                android:background="@color/apploizc_transparent_color"
                android:text="@string/cancel_text"
                android:textColor="@color/material_grey_800"
                android:textSize="@dimen/material_typography_textsize_button"/>

            <Button
                android:id="@+id/audio_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_weight="1"
                android:background="@color/apploizc_transparent_color"
                android:text="@string/send_text"
                android:textColor="@color/material_grey_800"
                android:textSize="@dimen/material_typography_textsize_button"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
