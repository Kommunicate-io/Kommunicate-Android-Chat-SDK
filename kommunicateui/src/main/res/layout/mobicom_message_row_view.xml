<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:minHeight="@dimen/material_lists_height_row">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_default_padding">

        <include layout="@layout/user_image_widget"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_default_padding"
            android:layout_toRightOf="@+id/profile_image_relative_layout"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/name_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/smReceivers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textColor="@color/material_grey_900"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/material_typography_textsize_subheading"
                    tools:text="James Drake"/>

                <TextView
                    android:id="@+id/createdAtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/smReceivers"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/material_default_padding"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/material_grey_500"
                    android:textSize="@dimen/material_typography_textsize_caption"
                    tools:text="3 hours ago"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messageUnread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachmentIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/material_half_padding"
                    android:src="@drawable/ic_attachment_grey_600_24dp"
                    android:tint="@color/material_grey_500"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/unreadSmsCount"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:background="@drawable/unread_message_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_toRightOf="@+id/attachmentIcon"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/material_grey_500"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/material_typography_textsize_caption"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_marginLeft="@dimen/material_default_padding"
            android:layout_toRightOf="@+id/profile_image_relative_layout">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_status"
                android:textColor="@color/material_grey_500"
                android:textSize="@dimen/material_typography_textsize_caption"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/smTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testTime"
                android:textColor="@color/material_grey_500"
                android:textSize="@dimen/material_typography_textsize_caption"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/selfDestruct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/self_destruct"
                android:textColor="@color/material_grey_500"
                android:textSize="@dimen/material_typography_textsize_caption"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/profile_image_relative_layout"
            android:layout_alignBottom="@+id/profile_image_relative_layout">

            <TextView
                android:id="@+id/onlineTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/online_circle"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/offlineTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/offline_circle"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/material_lists_height_row"
        android:background="@color/material_grey_300"/>

</RelativeLayout>