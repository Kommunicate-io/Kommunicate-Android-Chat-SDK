<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/material_lists_height_row"
    android:layout_marginTop="@dimen/material_half_padding"
    android:longClickable="true"
    tools:context="com.applozic.mobicomkit.uiwidgets.conversation.adapter.DetailedConversationAdapter">

    <include
        android:id="@+id/profile_image_layout"
        layout="@layout/widget_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/material_default_padding"/>

    <TextView
        android:id="@+id/onlineTextView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/profile_image_layout"
        android:layout_alignEnd="@+id/profile_image_layout"
        android:layout_alignRight="@+id/profile_image_layout"
        android:layout_gravity="start|top"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/online_circle"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/material_default_padding"
        android:layout_toRightOf="@+id/profile_image_layout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nameTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/material_typography_textsize_body"
                android:visibility="gone"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/messageTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/messageTextInsideLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/applozic_received_message"
                    android:minHeight="@dimen/material_chips_height"
                    android:minWidth="@dimen/material_chips_height"
                    android:orientation="vertical">

                    <include layout="@layout/reply_message_layout"/>

                    <TextView
                        android:id="@+id/attached_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_attachment_grey_600_24dp"
                        android:drawablePadding="@dimen/material_default_padding"
                        android:drawableStart="@drawable/ic_attachment_grey_600_24dp"
                        android:drawableTint="@color/material_grey_600"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/material_half_padding"
                        android:paddingLeft="@dimen/material_default_padding"
                        android:paddingRight="@dimen/material_default_padding"
                        android:paddingTop="@dimen/material_half_padding"
                        android:textColor="@color/received_message_bg_color"
                        android:textSize="@dimen/material_typography_textsize_body"
                        android:visibility="gone"/>

                    <include layout="@layout/mobicom_attachment_preview_layout"/>

                    <include layout="@layout/mobicom_contact_share_layout"/>

                    <include layout="@layout/mobicom_chat_location_view"/>

                    <include layout="@layout/applozic_document_attachment"/>

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/material_half_padding"
                        android:paddingLeft="@dimen/material_default_padding"
                        android:paddingRight="@dimen/material_default_padding"
                        android:paddingTop="@dimen/material_half_padding"
                        android:textColor="@color/received_text_color"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/material_typography_textsize_body"
                        app:emojiSize="@dimen/material_typography_textsize_title"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/selfDestruct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingEnd="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:paddingStart="8dp"
                    android:text="@string/self_destruct"
                    android:textColor="@color/apploizc_darker_gray_color"
                    android:textSize="11sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <include layout="@layout/al_rich_message_layout"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageTextLayout"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="2dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingEnd="2dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="2dp"
                    android:paddingStart="0dp"
                    android:text=""
                    android:textColor="@color/message_details_text_color"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tempForLayoutAdjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_schedule_grey_600_24dp"
                    android:drawableRight="@drawable/ic_schedule_grey_600_24dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/material_grey_500"
                    android:textSize="11sp"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/createdAtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start|bottom"
            android:layout_marginLeft="2dip"
            android:paddingTop="2dp"
            android:textColor="@color/material_grey_500"
            android:textSize="10sp"
            tools:text="12:34 PM"/>

    </LinearLayout>

</RelativeLayout>
