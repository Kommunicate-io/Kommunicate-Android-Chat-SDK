<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/material_lists_height_row"
    android:layout_marginRight="@dimen/material_default_padding"
    android:layout_marginTop="5dp"
    tools:context="com.applozic.mobicomkit.uiwidgets.conversation.adapter.DetailedConversationAdapter">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:layout_toLeftOf="@+id/statusImage"
        android:orientation="vertical"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/messageTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/messageTextInsideLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/applozic_sent_message"
                android:minHeight="@dimen/material_chips_height"
                android:minWidth="@dimen/material_chips_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/attached_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_attachment_grey_600_24dp"
                    android:drawablePadding="@dimen/material_default_padding"
                    android:drawableStart="@drawable/ic_attachment_grey_600_24dp"
                    android:drawableTint="@color/material_white_1000"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/material_half_padding"
                    android:paddingLeft="@dimen/material_default_padding"
                    android:paddingRight="@dimen/material_default_padding"
                    android:paddingTop="@dimen/material_half_padding"
                    android:textColor="@color/sent_message_text_color"
                    android:textSize="@dimen/material_typography_textsize_body"
                    android:visibility="gone"/>

                <include layout="@layout/reply_message_layout"/>

                <include layout="@layout/mobicom_attachment_preview_layout"/>

                <include layout="@layout/mobicom_contact_share_layout"/>

                <include layout="@layout/mobicom_chat_location_view"/>

                <include layout="@layout/applozic_document_attachment"/>

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/material_half_padding"
                    android:paddingLeft="@dimen/material_default_padding"
                    android:paddingRight="@dimen/material_default_padding"
                    android:paddingTop="@dimen/material_half_padding"
                    android:textColor="@color/sent_message_text_color"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/material_typography_textsize_body"
                    android:visibility="visible"
                    app:emojiSize="@dimen/material_typography_textsize_title"/>


            </LinearLayout>

            <TextView
                android:id="@+id/selfDestruct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingEnd="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="8dp"
                android:paddingStart="2dp"
                android:text="@string/self_destruct"
                android:textColor="@color/message_details_text_color"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

        <include layout="@layout/al_rich_message_layout"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/statusMainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/messageTextLayout"
            android:layout_marginRight="21dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Read"
                android:textColor="#a6a2a2"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/createdAtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cardView"
        android:layout_below="@+id/cardView"
        android:layout_gravity="right|end|bottom"
        android:paddingRight="1dip"
        android:textColor="@color/material_grey_500"
        android:textSize="10sp"
        tools:text="12:34 PM"/>

    <TextView
        android:id="@+id/statusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignParentRight="true"
        android:gravity="left"/>

</RelativeLayout>






