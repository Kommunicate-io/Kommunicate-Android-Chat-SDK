<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/individual_message_send_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/material_half_padding"
    android:orientation="horizontal"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:minHeight="@dimen/material_touchable_minheight"
        app:cardCornerRadius="20dp"
        app:cardElevation="0.5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/widget_record"
        app:layout_constraintEnd_toStartOf="@+id/conversation_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/material_touchable_minheight">

            <include
                android:id="@+id/replyMessageLayoutWidget"
                layout="@layout/widget_reply_message_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_half_padding"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/main_edit_text_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/material_touchable_minheight"
                app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/replyMessageLayoutWidget">

                <EditText
                    android:id="@+id/conversation_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/apploizc_transparent_color"
                    android:cursorVisible="true"
                    android:hint="Escribe tu mensaje..."
                    android:imeOptions="actionSend|flagNoExtractUi"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="6"
                    android:paddingLeft="@dimen/material_default_padding"
                    android:paddingStart="@dimen/material_default_padding"
                    android:textColor="@color/material_grey_800"
                    android:textColorHint="@color/material_grey_500"
                    android:textSize="@dimen/material_typography_textsize_subheading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/options_attachment_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/camera_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:contentDescription="@string/image_description_default"
                    android:paddingEnd="@dimen/material_default_padding"
                    android:paddingRight="@dimen/material_default_padding"
                    android:scaleType="center"
                    android:src="@drawable/ic_camera_alt_grey_600_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/options_attachment_btn"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/options_attachment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignBottom="@+id/conversation_message"
                    android:contentDescription="@string/image_description_default"
                    android:paddingEnd="@dimen/material_default_padding"
                    android:paddingLeft="@dimen/material_half_padding"
                    android:paddingRight="@dimen/material_default_padding"
                    android:paddingStart="@dimen/material_half_padding"
                    android:scaleType="center"
                    android:src="@drawable/ic_attach_file_grey_600_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/camera_btn"
                    app:layout_constraintStart_toEndOf="@+id/conversation_message"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.Guideline
                android:id="@+id/guidelineTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="2dp"
                app:layout_constraintTop_toBottomOf="parent"/>

            <android.support.constraint.Guideline
                android:id="@+id/guidelineBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="2dp"
                app:layout_constraintTop_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/conversation_send"
        android:layout_width="@dimen/material_touchable_minheight"
        android:layout_height="@dimen/material_touchable_minheight"
        android:layout_alignBottom="@+id/cardView"
        android:layout_marginEnd="@dimen/material_half_padding"
        android:layout_marginRight="@dimen/material_half_padding"
        android:contentDescription="@string/image_description_default"
        android:scaleType="center"
        android:src="@drawable/ic_send_white_24dp"
        android:visibility="visible"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"/>

    <include
        android:id="@+id/widget_record"
        layout="@layout/widget_record_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"/>

</android.support.constraint.ConstraintLayout>
