<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/individual_message_send_layout_legacy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/material_half_padding"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/material_half_padding"
    android:visibility="visible"
    tools:showIn="@layout/mobicom_message_list">

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/applozic_theme_color_primary"
        app:layout_constraintBottom_toTopOf="@+id/main_edit_text_constraint_layout_legacy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_edit_text_constraint_layout_legacy"
        android:paddingTop="@dimen/material_half_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_default_padding"
            android:layout_marginRight="@dimen/material_default_padding"
            android:orientation="vertical">

            <include layout="@layout/widget_reply_message_edit_layout_legacy"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/edit_text_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/material_touchable_minheight">

                <ImageView
                    android:id="@+id/conversation_send_legacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send_white_24dp"
                    android:tint="@color/applozic_theme_color_primary"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/conversation_message_legacy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/apploizc_transparent_color"
                    android:cursorVisible="true"
                    android:hint="Escribe tu mensaje..."
                    android:imeOptions="actionSend|flagNoExtractUi"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="6"
                    android:textColor="@color/material_black_1000"
                    android:textColorHint="#8f8b8b"
                    android:textSize="@dimen/material_typography_textsize_subheading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/conversation_send_legacy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/attachment_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera_btn_legacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/material_half_padding"
                    android:scaleType="center"
                    android:src="@drawable/ic_photo_camera_grey_600_24dp"/>

                <ImageView
                    android:id="@+id/options_attachment_btn_legacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/material_half_padding"
                    android:paddingRight="@dimen/material_half_padding"
                    android:scaleType="center"
                    android:src="@drawable/ic_attach_file_grey_600_24dp"/>

                <ImageView
                    android:id="@+id/location_btn_legacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/material_half_padding"
                    android:paddingRight="@dimen/material_half_padding"
                    android:scaleType="center"
                    android:src="@drawable/ic_location_on_grey_600_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <include
        android:id="@+id/widget_record"
        layout="@layout/widget_record_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_edit_text_constraint_layout"/>

</android.support.constraint.ConstraintLayout>
