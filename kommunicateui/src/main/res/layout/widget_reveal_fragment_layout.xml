<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:showIn="@layout/mobicom_message_list">

    <android.support.v7.widget.CardView
        android:id="@+id/options_attachment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_half_padding"
        android:layout_marginLeft="@dimen/material_half_padding"
        android:layout_marginRight="@dimen/material_half_padding"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="0.5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_default_padding"
            android:layout_marginRight="@dimen/material_default_padding"
            android:clipChildren="false"
            android:clipToPadding="false">

            <android.support.constraint.Guideline
                android:id="@+id/guidelineTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/material_default_padding"/>

            <android.support.constraint.Guideline
                android:id="@+id/guidelineBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/material_default_padding"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/camera_options_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_photo_camera_grey_600_24dp"
                android:tint="@color/material_white_1000"
                app:backgroundTint="@color/material_amber_600"
                app:fabSize="normal"
                app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
                app:layout_constraintEnd_toStartOf="@+id/file_as_attachment_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/file_as_attachment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_attach_file_grey_600_24dp"
                android:tint="@color/material_white_1000"
                app:backgroundTint="@color/material_purple_500"
                app:fabSize="normal"
                app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
                app:layout_constraintEnd_toStartOf="@+id/location_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/camera_options_btn"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/location_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_location_on_grey_600_24dp"
                android:tint="@color/material_white_1000"
                app:backgroundTint="@color/material_cyan_400"
                app:fabSize="normal"
                app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/file_as_attachment_btn"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</io.codetail.widget.RevealFrameLayout>
