<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- the theme applied to the application or activity -->
    <style name="MobiComAppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ApplozicActionBar</item>
        <item name="actionBarStyle">@style/ApplozicActionBar</item>
        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/mobitexter_main_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/material_light_blue_400</item>

    </style>

    <style name="ApplozicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/applozic_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/applozic_theme_color_primary_dark</item>
        <item name="colorAccent">@color/applozic_theme_color_primary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/material_black_1000</item>
    </style>

    <style name="TextAppearance.Widget.IconMenu.Item" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textColor">@color/material_black_1000</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/material_white_1000</item>
        <item name="android:textColorSecondary">@color/material_white_1000</item>
        <item name="actionMenuTextColor">@color/material_black_1000</item>
    </style>

    <style name="Applozic.People.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/applozic_theme_color_primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/applozic_theme_color_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
        <item name="colorAccent">@color/material_white_1000</item>
        <!-- You can also set colorControlNormal, colorControlActivated, colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="colorControlActivated">@color/applozic_theme_color_control_activated</item>
        <item name="colorControlHighlight">@color/applozic_theme_color_control_highlight</item>
        <item name="android:textColorPrimary">@color/material_white_1000</item>
        <!--actionbar icon color-->
        <item name="android:textColorSecondary">@color/applozic_theme_secondary_text</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/material_typography_textsize_body</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ApplozicTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:subtitleTextStyle">@style/ApplozicTheme.ActionBar.TitleTextStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ApplozicTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/material_white_1000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ApplozicTheme.ActionBar.SubTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ApplozicTheme_ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:width">20dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Applozic_PopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/material_black_1000</item>
    </style>

    <style name="actionDropDownStyle" parent="android:style/Widget.Holo.Light.Spinner"></style>

    <style name="Applozic_FullScreen_Theme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/material_black_1000</item>
        <item name="android:textColorPrimary">@color/material_white_1000</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:textColorSecondary">@color/material_white_1000</item>
    </style>

</resources>
